<div>
    <div class="h-auto mt-8 flex flex-wrap justify-items-center justify-around mx-16">
        <%= link_to teacher_dashboard_path, class: "transition duration-500 ease-in-out bg-indigo-900 text-white py-2 px-3 rounded-xl hover:bg-indigo-600 transform hover:scale-105" do %>
            <button>
                Dashboard
            </button>
        <% end %>
        <%= link_to group_path(@group.id), class: "transition duration-500 ease-in-out bg-indigo-900 text-white py-2 px-3 rounded-xl hover:bg-indigo-600 transform hover:scale-105" do %>
            <button>
                Grupa <%= @group.name %>
            </button>
        <% end %>
        <%= link_to delete_group_project_path(@group_project_reference), data: { confirm: 'Are you sure?' }, method: :delete, class: "transition duration-500 ease-in-out bg-indigo-900 text-white py-2 px-3 rounded-xl hover:bg-indigo-600 transform hover:scale-105" do %>
            <button>
                Usu≈Ñ projekt grupowy
            </button>
        <% end %>
    </div>
    <p class="text-center mt-4 font-semibold text-4xl">
        Projekty tego projektu grupowego <%=@group_project_reference.name%>
    </p>:
    <div class="mx-32">
        <% @group_project_reference.projects.each do |project| %>
            <%= link_to project_path(project) do %> 
                <p class="font-semibold text-lg">
                    <%= project.name %>
                </p>
            <% end %>
        <% end %>
    </div>
    <p class="text-center mt-4 font-semibold text-4xl">
        Uczniowie:
    </p>
    <div class="mx-32">
        <% @students.each do |student| %>
            <p class="font-semibold text-lg">
                <%= student.name %> <%= student.surname %>
            </p>
        <% end %>
    </div>
</div>