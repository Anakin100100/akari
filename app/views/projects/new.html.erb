<div>
    <div class="h-auto mt-8 flex flex-wrap justify-items-center justify-around mx-16">
        <%= link_to teacher_dashboard_path, class: "transition duration-500 ease-in-out bg-indigo-900 text-white py-2 px-3 rounded-xl hover:bg-indigo-600 transform hover:scale-105" do %>
            <button>
                Dashboard
            </button>
        <% end %>
        <%= link_to groups_path, class: "transition duration-500 ease-in-out bg-indigo-900 text-white py-2 px-3 rounded-xl hover:bg-indigo-600 transform hover:scale-105" do %>
            <button>
                Grupy
            </button>
        <% end %>
    </div>
    <div class="grid place-items-center mt-16">
        <%= form_for :project, url: "/projects", method: :post do |form| %>
            <div class="grid grid-cols-1 mx-16">
                <div>
                    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.text_area :name, :cols => "100", :rows => "1", placeholder: "Nazwa projektu" %>      
                </div>
                <div>
                    <%= form.label :resource_definitions, class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.text_area :resource_definitions, :cols => "100", placeholder: "Definicja projektu w yaml", :rows => "5" %>
                </div>
                <div>
                    <%= form.label :cpu_limit, class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.text_area :cpu_limit, :cols => "100", :rows => "1", placeholder: "limit cpu w mili cpu (1/1000) np. 500 oznacza 0.5 rdzenia" %>      
                </div>
                <div>
                    <%= form.label :memory_limit, class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.text_area :memory_limit, :cols => "100", :rows => "1", placeholder: "Limit pamiÄ™ci w megabajtach" %>      
                </div>
                <%= form.hidden_field :group_id, value: params["group_id"] %>
                <%= form.submit  %>
            </div>
        <% end  %>
    </div>
</div>