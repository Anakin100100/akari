                    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.text_field :name, placeholder: "Nazwa grupy" %>      
                </div>
                <div>
                    <%= form.label :students_names, class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.text_area :students_names, :cols => "100", placeholder: "Emaile uczniÃ³w odzielone nowymi liniami", :rows => "5" %>
                </div>
                <%= form.submit  %>
            </div>
        <% end  %>
    </div>
</div>